%tr
	%td
		%p.product-index.product-name= product.name
	%td
		%p
			%strong
				= "#{product.kcal / 10} kcal"
				\/
				= small_units(product.unit) 

				/ %td.action-buttons
				/ 	= link_to "Show", product_path(product), class: "btn btn-mini btn-primary"
				/ 	= link_to "Edit", edit_product_path(product), class: "btn btn-mini btn-primary"
				/ 	=link_to "Delete", product, method: :delete, confirm: "Are you sure?", title: "Delete this micropost", class: "btn btn-mini btn-danger"